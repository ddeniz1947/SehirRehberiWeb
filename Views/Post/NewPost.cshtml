@model SehirRehberiApp.Models.ViewModels.PostViewModel

@{
    ViewBag.Title = "NewPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container" style="margin-top:40px; color:darkolivegreen">
        <div class="row">
            <div class="col-md-8">
                <form action="/NewPost" class="needs-validation" novalidate method="post" enctype="multipart/form-data">
                    @if (Request.Cookies["USERID"] != null)
                    {
                        //using (Html.BeginForm("NewPost", "Post", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        //{


                        <table>
                            <tr>
                                <td>
                                    <h4 style="font-family:'Birds of Paradise  Personal use'">Postunuza Bir İsim Verin&nbsp;</h4>
                                </td>
                                <td>
                                    :&nbsp;&nbsp;
                                </td>
                                <td>
                                    @Html.TextBoxFor(m => m.PostName, new { @class = "form-control", @required = "required" })
                                    <div class="invalid-feedback">
                                        Lütfen Albümünüz İçin Bir İsim Giriniz.
                                    </div>

                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4 style="font-family:'Birds of Paradise  Personal use'">Şehrinizi Seçiniz&nbsp;</h4>
                                </td>
                                <td>
                                    :&nbsp;&nbsp;
                                </td>
                                <td>
                                    @Html.DropDownListFor(m => m.IlId, Model.Iller, new { @class = "form-control", @required = "required" })
                                    <div class="invalid-feedback">
                                        Lütfen İl Seçiniz.
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h4 style="font-family:'Birds of Paradise  Personal use'">İlçenizi Seçiniz&nbsp;</h4>
                                </td>
                                <td>
                                    :&nbsp;&nbsp;
                                </td>
                                <td>
                                    @Html.DropDownListFor(m => m.IlceId, Model.Ilceler, new { @class = "form-control", @required = "required" })
                                    <div class="invalid-feedback">
                                        Lütfen İlçe Seçiniz.
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h4 style="font-family:'Birds of Paradise  Personal use'">Açıklamanızı Yazınız&nbsp;</h4>
                                </td>
                                <td>
                                    :&nbsp;&nbsp;
                                </td>
                                <td>
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @required = "required" })
                                    <div class="invalid-feedback">
                                        Lütfen Bir Açıklama Giriniz.
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4 style="font-family:'Birds of Paradise  Personal use'">Albümünüz İçin Kapak Fotoğrafı&nbsp;</h4>
                                </td>
                                <td>
                                    :&nbsp;&nbsp;
                                </td>
                                <td>
                                    <input type="file" class="btn btn-outline-success" name="image" required placeholder="Ekleyeceğiniz görseli seçiniz:" accept="image/*">
                                    <div class="invalid-feedback">
                                        Lütfen Bir Albüm Kapağı Seçiniz.
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <center>

                                        <input type="submit" class="btn btn-lg btn-outline-success" style="font-family:'Birds of Paradise  Personal use'" value="Paylaş !" />
                                        <a type="submit" href="@Url.RouteUrl("FirstPage")" class="btn btn-lg btn-outline-danger" style="font-family:'Birds of Paradise  Personal use'">İptal</a>
                                    </center>
                                </td>
                            </tr>
                        </table>

                        //}
                    }
                    else
                    {
                        <h4 class="display-4">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</h4>
                    }
                </form>
            </div>
            <div class="col-md-4">
                <img class="img-fluid" width="700" src="~/Content/modalphoto.png" alt="Alternate Text" />
            </div>
        </div>
  
    </div>


