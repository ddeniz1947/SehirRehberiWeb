@model SehirRehberiApp.Models.ViewModels.ExtraImageViewModel
@{
    ViewBag.Title = "AddExtraImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddExtraImage</h2>
<div class="container" style="margin-top:40px; color:darkolivegreen">
    @using (Html.BeginForm("AddExtraImage", "Post", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <table >
            <tr>
                <td>
                    <h4 style="font-family:'Birds of Paradise  Personal use'">Albüm Adı&nbsp;</h4>
                </td>
                <td>
                    :&nbsp;&nbsp;
                </td>
                <td>
                    <div>@Model.ExtraPostName</div>
                </td>
            </tr>
        
            <tr>
                <td>
                    <h4 style="font-family:'Birds of Paradise  Personal use'">Paylaşımınıza Fotoğraf Ekleyin&nbsp;</h4>
                </td>
                <td>
                    :&nbsp;&nbsp;
                </td>
                <td>
                    <input type="file" class="btn btn-outline-success" name="images" placeholder="Ekleyeceğiniz görselleri seçiniz:" accept="image/*" multiple />
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <center>
                        <input type="submit" class="btn btn-lg btn-outline-success" style="font-family:'Birds of Paradise  Personal use'" value="Paylaş !" />
                        <a type="submit" href="@Url.RouteUrl("FirstPage")" class="btn btn-lg btn-outline-danger" style="font-family:'Birds of Paradise  Personal use'">İptal</a>
                    </center>
                </td>
            </tr>
        </table>
    }



</div>

