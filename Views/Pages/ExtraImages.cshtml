@model SehirRehberiApp.Models.ViewModels.ExtraImageViewModel
@{
    ViewBag.Title = "ExtraImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br /><br /><br />
    @foreach (var item in Model.Posts)
    {

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <center>
                    <img alt="@item.Id" width="800" class="img-fluid" src="data:image/jpg;base64,@Convert.ToBase64String(item.ImgData)" />
                    <h3 class="display-3">@item.PostName</h3>
                    <p style="font-family:'Segoe UI'; font-size:20px;">@item.PostDate</p>
                    <h5 class="display-4">
                        <span class="badge badge-pill badge-success">@item.UserName</span>
                    </h5>
                    <p style="font-size:20px;">
                        <em>
                            @item.Description
                        </em>
                    </p>
                </center>
            </div>
            <div class="col-md-3"></div>
        </div>

    }

    @foreach (var item in Model.extraImages)
    {
        <div class="row">
            <div class="col-md-12">
                <center>
                    <img alt="@item.ExtraUserId" width="500" class="img-fluid" src="data:image/jpg;base64,@Convert.ToBase64String(item.ExtraImgData)" />
                </center>
                <br />
                <hr style="font-weight:bold; color:green;">
            </div>

        </div>
    }

</div>
